get_filename_component(bip39_CMAKE_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)
include(CMakeFindDependencyMacro)

list(APPEND CMAKE_MODULE_PATH ${bip39_CMAKE_DIR})

# NOTE Had to use find_package because find_dependency does not support COMPONENTS or MODULE until 3.8.0

find_package(PicoSHA2 REQUIRED MODULE)
list(REMOVE_AT CMAKE_MODULE_PATH -1)

if(NOT TARGET bip39::bip39)
    include("${bip39_CMAKE_DIR}/bip39Targets.cmake")
endif()

set(bip39_LIBRARIES bip39::bip39)
